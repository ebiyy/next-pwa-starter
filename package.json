{
  "name": "next-pwa-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check .",
    "format": "biome format . --write",
    "icons": "bun scripts/generate-icons.ts",
    "pretest": "bun tests/scripts/setup.ts",
    "test": "bun test tests/unit tests/integration",
    "test:watch": "bun test tests/unit tests/integration --watch",
    "test:ui": "bun test tests/unit tests/integration --ui",
    "test:e2e": "playwright test tests/e2e",
    "test:e2e:ui": "playwright test tests/e2e --ui",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:coverage": "bun test tests/unit tests/integration --coverage",
    "test:setup": "bun tests/scripts/setup.ts",
    "test:cleanup": "bun tests/scripts/cleanup.ts",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:reset": "supabase db reset",
    "db:types": "supabase gen types typescript --local > src/types/supabase.ts",
    "db:studio": "open http://localhost:54323",
    "env:dev": "cp supabase/config.development.toml supabase/config.toml",
    "env:staging": "cp supabase/config.staging.toml supabase/config.toml",
    "env:prod": "cp supabase/config.production.toml supabase/config.toml",
    "db:seed:dev": "supabase db reset --seed-file supabase/seed.sql",
    "db:seed:staging": "psql $STAGING_DATABASE_URL -f supabase/seed.staging.sql",
    "deploy:staging": "bunx supabase link --project-ref $STAGING_PROJECT_ID && bunx supabase db push",
    "deploy:prod": "bunx supabase link --project-ref $PRODUCTION_PROJECT_ID && bunx supabase db push",
    "db:backup": "pg_dump $DATABASE_URL > backup.sql",
    "db:status": "supabase status",
    "db:logs": "supabase logs"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@neondatabase/serverless": "^0.10.4",
    "@radix-ui/react-hover-card": "^1.1.4",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.2",
    "@supabase/supabase-js": "^2.47.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.30.1",
    "drizzle-orm": "^0.38.3",
    "framer-motion": "^11.17.0",
    "hono": "^4.6.16",
    "lucide-react": "^0.471.0",
    "next": "15.1.4",
    "next-themes": "^0.4.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.49.1",
    "@shadcn/ui": "^0.0.4",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.3",
    "bun-types": "^1.1.43",
    "postcss": "^8",
    "sharp": "^0.33.5",
    "supabase": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
