{
  "name": "next-pwa-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "TURBO_TELEMETRY_DISABLED=1 NODE_ENV=production next build",
    "start": "next start",
    "lint": "biome check .",
    "format": "biome format . --write",
    "icons": "bun scripts/generate-icons.ts",
    "pretest": "bun run test:setup && bun run db:seed:dev",
    "test": "bun test tests/unit tests/integration",
    "test:watch": "bun test tests/unit tests/integration --watch",
    "test:ui": "bun test tests/unit tests/integration --ui",
    "test:e2e": "playwright test tests/e2e",
    "test:e2e:ui": "playwright test tests/e2e --ui",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:coverage": "bun test tests/unit tests/integration --coverage",
    "test:setup": "bun tests/scripts/setup.ts",
    "test:cleanup": "bun tests/scripts/cleanup.ts",
    "test:performance": "bun test tests/performance/cache-strategy.test.ts",
    "test:performance:report": "bun run build && bun run test:performance:run",
    "test:performance:run": "start-server-and-test start http://localhost:3000 'bun tests/scripts/run-performance-tests.ts'",
    "lighthouse": "bunx @lhci/cli@0.14.x collect --url=http://localhost:3000 --settings.preset=desktop",
    "lighthouse:mobile": "bunx @lhci/cli@0.14.x collect --url=http://localhost:3000 --settings.preset=mobile",
    "lighthouse:compare": "bunx @lhci/cli@0.14.x collect --url=http://localhost:3000 --url=https://production-url.com --settings.preset=desktop",
    "lighthouse:debug": "CHROME_DEBUG_PORT=9222 bunx @lhci/cli@0.14.x collect --url=http://localhost:3000 --settings.preset=desktop --settings.chromeFlags=\"--remote-debugging-port=9222\"",
    "test:all": "bun run test && bun run test:e2e && bun run test:performance:report",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:reset": "supabase db reset",
    "db:types": "supabase gen types typescript --local > src/types/supabase.ts",
    "db:studio": "open http://localhost:54323",
    "env:dev": "cp supabase/config.development.toml supabase/config.toml",
    "env:staging": "cp supabase/config.staging.toml supabase/config.toml",
    "env:prod": "cp supabase/config.production.toml supabase/config.toml",
    "db:seed:dev": "supabase db reset",
    "db:seed:staging": "psql $STAGING_DATABASE_URL -f supabase/seed.staging.sql",
    "deploy:staging": "bunx supabase link --project-ref $STAGING_PROJECT_ID && bunx supabase db push",
    "deploy:prod": "bunx supabase link --project-ref $PRODUCTION_PROJECT_ID && bunx supabase db push",
    "db:backup": "pg_dump $DATABASE_URL > backup.sql",
    "db:status": "supabase status",
    "db:logs": "supabase logs",
    "ds:init": "bun scripts/init-data-source.ts",
    "ds:supabase": "NEXT_PUBLIC_DATA_SOURCE_PROVIDER=supabase bun run ds:init",
    "ds:clear-cache": "bun scripts/clear-cache.ts",
    "ds:validate": "bun scripts/validate-data-source.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-openapi": "^0.18.3",
    "@neondatabase/serverless": "^0.10.4",
    "@radix-ui/react-hover-card": "^1.1.4",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.2",
    "@supabase/supabase-js": "^2.47.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.30.1",
    "drizzle-orm": "^0.38.3",
    "framer-motion": "^11.17.0",
    "hono": "^4.6.16",
    "lucide-react": "^0.471.0",
    "next": "15.1.4",
    "next-themes": "^0.4.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@faker-js/faker": "^9.4.0",
    "@lhci/cli": "^0.14.0",
    "@playwright/test": "^1.49.1",
    "@shadcn/ui": "^0.0.4",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.3",
    "bun-types": "^1.1.43",
    "postcss": "^8",
    "sharp": "^0.33.5",
    "start-server-and-test": "^2.0.10",
    "supabase": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "undici": "^7.2.3"
  }
}
