{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "startServerCommand": "bun run start",
      "url": ["http://localhost:3000"],
      "settings": {
        "preset": "desktop",
        "chromeFlags": ["--no-sandbox", "--disable-gpu"]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    },
    "assert": {
      "preset": "lighthouse:recommended"
    }
  }
}
